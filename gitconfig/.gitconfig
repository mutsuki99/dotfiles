# vim: noet
[alias]
	br  = branch
	ci  = commit
	cia = commit -a
	co  = checkout
	d   = diff
	dw  = diff --word-diff=color
	fetch = fetch -p
	h   = help
#	 gp = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %s\" --all --date=short
	graph = log --graph --date-order -C -M --pretty=format:\"<%h> %Cblue%ad [%an]%Creset %Cgreen%d%Creset %s\" --all --date=iso
	pl  = pull -p
	pr  = pull --rebase
	ps  = push
	s   = status -sb
	st  = status
	ss  = stash
	ssc = stash clear
	ssl = stash list
	ssp = stash pop
	sbp = submodule foreach 'git co master && git pull'
	sbu = submodule update

[core]
	autocrlf = false
	editor = vim -c \"set fenc=utf-8\"
	excludesfile = ~/.gitignore
	#pager = vimcat
	#pager = vimpager
	pager = less -R
	#pager = less.sh
	quotepath = false

[push]
	default = current

[pager]
	stash = false

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	pager = true
	showbranch = auto
	status = auto
	ui = auto

[help]
	autocorrect = 30

[include]
	path = ~/.gitconfig.local
